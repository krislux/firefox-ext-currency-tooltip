{
  "manifest_version": 2,
  "name": "Currency tooltip",
  "version": "0.1.1",

  "description": "Adds tooltip with local currency to foreign prices",

  "permissions": [
    "storage",
    "activeTab",
    "https://v6.exchangerate-api.com/"
  ],
  "background": {
    "scripts": ["src/background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/main.js"],
      "run_at": "document_end"
    }
  ]
}